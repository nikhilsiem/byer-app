
  <%- include('partials/header')%>
  <%
  if(session=='user'||session=='partner'){%>

<style>
  .login{
    display: none;
  }
  .join{
    display: none;
  }
  .register{
    display: none;
  }
  .user{
    display: block!important;
  }
</style>

 <% }

%>




<%

  if(session=='partner'){%>

<style>
  .products{
    display: none;
  }
  .cart{
    display: none;
  }

</style>

 <% }

%>





<section class="upper-strip"></section>


<section class="customerInformation">
   <div class="container">
      <div class="row ">
        <div class="col-lg-12">

          <!-- Shopping cart table -->
          <div class="table-responsive white-box">


            <table class="table cart-table">


              <thead>
                <tr>
                  <th scope="col" class="border-0 bg-light">
                    <div class="p-2 px-3 text-uppercase">Product</div>
                  </th>
                  <th scope="col" class="border-0 bg-light">
                    <div class="py-2 text-uppercase">Total Price</div>
                  </th>
                  <th scope="col" class="border-0 bg-light">
                    <div class="py-2 text-uppercase">Quantity</div>
                  </th>
                  <th scope="col" class="border-0 bg-light">
                    <div class="py-2 text-uppercase">Remove</div>
                  </th>
                </tr>
              </thead>





              <tbody>

<% 
if(cart){

  var cartItems=cart.items;
  var keys=Object.keys(cartItems);


  for(var i=0;i<keys.length;i++) {
    var name=cartItems[keys[i]].item.name;
    var price=cartItems[keys[i]].price;
    var perHeadPrice=cartItems[keys[i]].item.price;
    var quantity=cartItems[keys[i]].qty;
    var imgpath=cartItems[keys[i]].item.filePath;
    var productId=cartItems[keys[i]].item.productId;
    %>
                <tr>
                  <th scope="row" class="border-0">
                    <div class="p-2">
                      <img src=<%=imgpath%> alt="product Image" width="70" class="img-fluid rounded shadow-sm">
                      <div class="ml-3 d-inline-block align-middle">
                        <h5 class="mb-0"> <a href="#" class="text-dark d-inline-block align-middle"><%=name%></a></h5><span class="text-muted font-weight-normal font-italic d-block">Price: <%=perHeadPrice%></span>
                      </div>
                    </div>
                  </th>
                  <td class="border-0 align-middle"><strong>Rs. <%=price%></strong></td>
                  <td class="border-0 align-middle"><strong><%=quantity%></strong></td>
                  <td class="border-0 align-middle"><a href="/cart/remove?id=<%=productId%>" class="text-dark"><i class="fa fa-trash"></i></a></td>
                </tr>
<%}}


 var productPrice=cart?cart.totalPrice: 0;
              var shippingCharge=productPrice&&cart.totalPrice<500?50:0;
              var tax=0;
              var totalCost=parseInt(productPrice)+parseInt(shippingCharge)+tax;
%>


                


              </tbody>
            </table>


          </div>
          <!-- End -->
        </div>
      </div>
       <div class="row">
        <div class="col-md-12">
           <div class="white-box inner-cart-box">
              <div class="row">
                  <div class="col-lg-6">
                      <div class="bg-light  rounded-pill  text-uppercase font-weight-bold">Coupon code</div>
                      <div class="p-4">
                        <p class="font-italic mb-4">If you have a coupon code, please enter it in the box below</p>
                        <div class="input-group mb-4 border rounded-pill p-2">
                          <input type="text" placeholder="Apply coupon" aria-describedby="button-addon3" class="form-control border-0">
                          <div class="input-group-append border-0">
                            <button id="button-addon3" type="button" class="btn common-btn"><i class="fa fa-gift mr-2"></i>Apply coupon</button>
                          </div>
                        </div>
                      </div>
                      <div class="bg-light rounded-pill  text-uppercase font-weight-bold">Instructions for seller</div>
                      <div class="p-4">
                        <p class="font-italic mb-4">If you have some information for the seller you can leave them in the box below</p>
                        <textarea name="" cols="30" rows="2" class="form-control"></textarea>
                      </div>
                    </div>
                    <div class="col-lg-6">
                      <div class="bg-light rounded-pill  text-uppercase font-weight-bold">Order summary </div>
                      <div class="p-4">
                        <p class="font-italic mb-4">Shipping and additional costs are calculated based on values you have entered.</p>
                        <ul class="list-unstyled mb-4">
                          <li class="d-flex justify-content-between py-3 border-bottom"><strong class="text-muted">Order Subtotal </strong><strong>Rs. <%= productPrice %></strong></li>
                          <li class="d-flex justify-content-between py-3 border-bottom"><strong class="text-muted">Shipping and handling</strong><strong>Rs. <%=shippingCharge%> </strong></li>

                          

                          <li class="d-flex justify-content-between py-3 border-bottom"><strong class="text-muted">Tax</strong><strong>Rs. <%=tax%></strong></li>
                          <li class="d-flex justify-content-between py-3 border-bottom"><strong class="text-muted">Total</strong>
                            <h5 class="font-weight-bold">Rs. <%=totalCost%></h5>
                          </li>


                        </ul><a href="/cart/order" class="btn common-btn">Procceed to checkout</a>
                      </div>
                    </div>
              </div>
           </div>
        </div>
      </div>
    </div>
  </section>






























































































































